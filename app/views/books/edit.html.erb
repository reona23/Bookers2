<main>
  <p></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <%= form_with(model: @book, local: true) do |form| %>
          <div class="form-group">
            <h1>Editing Book</h1>
            <% if @book.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h2>
                <ul>
                  <% @book.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="field">
              <%= form.label :title, class: "control-label" %>
              <%= form.text_field :title, class: "form-control" %>
            </div>

            <p></p>

            <div class="field">
              <%= form.label :body, "Opinion", class: "control-label" %>
              <%= form.text_area :body, class: "form-control" %>
            </div>

            <p></p>

            <div class="actions">
              <%= form.submit "Update Book", class: "btn btn-success" %>
            </div>
          </div>
        <% end %>

        <%= link_to 'Show', @book, class: "btn btn-link btn-sm" %> |
        <%= link_to 'Back', books_path, class: "btn btn-link btn-sm" %>
      </div>
    </div>
  </div>
</main>
