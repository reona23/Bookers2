<main>
  <p></p>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <%= render partial: 'leftcommon', locals: { user: @user, book: @book } %>
      <!-- 右側 -->
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th></th>
              <th></th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <!-- 各trごとに1ユーザーの情報を載せていく（Bookモデルのindexアクションindex.html.erbのような働きをここにさせたい-->
            <% @books.each do |b| %>
              <tr>
                <td><!-- Bookモデルに投稿したユーザーの画像（Userモデルの画像）を表示させたい-->
                  <%= link_to user_path(b.user) do %>
                    <%= image_tag(b.user.profile_image.attached? ? b.user.profile_image : 'noimage.png', style: 'width: 100px; height: 100px;', class: 'img-fluid') %>
                  <% end %>
                </td>
                <td><!-- Bookモデルに投稿されたtitleカラムを表示させたい-->
                  <%= link_to b.title, book_path(b) %>
                </td>
                <td><!-- Bookモデルに投稿されたbodyカラムを表示させたい-->
                  <%= b.body %>
                </td>
                <td>
                  <% if b.favorited_by?(current_user) %>
                    <p>
                      <%= link_to book_favorite_path(b, b.favorites.find_by(user_id: current_user.id)), method: :delete do %>
                        <i class="fa fa-heart text-danger"></i> <span class="text-danger">1</span>
                      <% end %>
                    </p>
                  <% else %>
                    <p>
                      <%= link_to book_favorites_path(b), method: :post do %>
                        <i class="fa fa-heart-o text-primary"></i> <span class="text-primary">0</span>
                      <% end %>
                    </p>
                  <% end %>
                </td>
                <td>
                  <p>コメント数: <%= b.book_comments.count %></p>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</main>
