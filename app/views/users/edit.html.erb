<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <%= form_with(model: @user, local: true) do |f| %>
          <div class="form-group">
            <h1>User info</h1>
            <% if @user.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@user.errors.count, "error") %> prohibited this obj from being saved:</h2>
                <ul>
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="field">
              <%= f.label :name, class: "control-label" %>
              <%= f.text_field :name, class: "form-control" %>
            </div>

            <p></p>

            <div class="field">
              <%= f.label :profile_image, class: "control-label" %></br>
              <%= f.file_field :profile_image %>
            </div>

            <p></p>

            <div class="field">
              <%= f.label :introduction, class: "control-label" %>
              <%= f.text_area :introduction, class: "form-control" %>
            </div>

            <p></p>

            <div class="actions">
              <%= f.submit "Update User", class: "btn btn-success" %>
            </div>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</main>
