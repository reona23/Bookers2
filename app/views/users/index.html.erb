<main>
  <p></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <%= render partial: 'books/leftcommon', locals: { user: @user, book: @book } %>
      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class="table table-hover table-inverse" width="100%">
          <thead>
            <tr>
              <th width="30%">image</th>
              <th width="40%">name</th>
              <th colspan="3", width="30%"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |u| %>
              <tr>
                <td>
                  <%= image_tag(u.image.attached? ? u.image : 'noimage.png', style: 'width: 120px; height: 100px;', class: 'img-fluid') %>
                </td>
                <td>
                  <%= u.name %>
                </td>
                <td>
                  <a>
                    <%= link_to 'show', user_path(u) %>
                  </a>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>