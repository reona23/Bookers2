<main>
  <p></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <%= render partial: 'books/leftcommon', locals: { user: @user, book: @book } %>
      <!-- 右側 -->
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse" width="100%">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |b| %>
              <tr>
                <td>
                  <%= link_to @user do %>
                    <%= image_tag(@user.image.attached? ? @user.image : 'noimage.png', style: 'width: 100px; height: 85px;', class: 'img-fluid') %>
                  <% end %>
                </td>
                <td><%= link_to b.title, book_path(b) %></td>
                <td><%= b.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>